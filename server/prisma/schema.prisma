datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String  @unique
  phoneNumber String
  password    String
  role        String  @default("client")
  confirmed   Boolean @default(false)
}
model Service {
  id             Int      @id @default(autoincrement())
  name           String
  description    String
  price_min      Float
  price_max      Float
}

model Checkout {
  id             Int      @id @default(autoincrement())
  userId         Int
  carBrand       String
  carModel       String
  tireSize       String
  serviceName    String
  valveChange    Boolean
  tireQuantity   Int
  serviceId      String
  totalAmount    Float
  advanceAmount  Float
  remainingAmount Float
  bookingDate    DateTime
  bookingTime    String
  createdAt      DateTime @default(now())
  status          String   @default("active")
}
