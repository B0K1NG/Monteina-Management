datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  @default("client")
  confirmed  Boolean  @default(false)
}

model Service {
  id             Int      @id @default(autoincrement())
  name           String
  description    String
  price_min      Float
  price_max      Float
  duration_minutes Int
}
